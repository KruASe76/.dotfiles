<?xml version='1.0' encoding='utf-8'?>
<child>
    <object class="AdwActionRow" id="widget-id">
        <property name="title" translatable="yes"></property>
        <property name="tooltip-text" translatable="yes"></property>
        <child>
            <object class="GtkAdjustment" id="adjustment-id">
                <property name="lower"></property>
                <property name="upper"></property>
                <property name="step_increment"></property>
            </object>
            <object class="GtkSpinButton" id="spin-button-id">
                <property name="valign">center</property>
                <property name="snap_to_ticks">true</property>
                <property name="adjustment"></property>
            </object>
        </child>
    </object>
</child>
